<UserControl x:Class="cpsc481_group5_browser.ChangeUserSetting"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:cpsc481_group5_browser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="40px"></RowDefinition>
            <RowDefinition Height="30px"></RowDefinition>
            <RowDefinition Height="80px"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="45px"></ColumnDefinition>
                <ColumnDefinition Width="45px"></ColumnDefinition>
                <ColumnDefinition Width="45px"></ColumnDefinition>
                <ColumnDefinition Width="12*"></ColumnDefinition>
                <ColumnDefinition Width="45px"></ColumnDefinition>
                <ColumnDefinition Width="45px"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button x:Name="Back" Grid.Row="0" Grid.Column="0" Click="Back_Click">
                <Image HorizontalAlignment="Left" Height="25" Margin="5px,0,5px,0" VerticalAlignment="Center" Width="35" Source="/assets/back.png"/>
            </Button>

            <Button x:Name="Forward" Grid.Row="0" Grid.Column="1" Click="Forward_Click">
                <Image HorizontalAlignment="Left" Height="25" Margin="5px,0,5px,0" VerticalAlignment="Center" Width="35" Source="/assets/forward.png"/>
            </Button>

            <Button x:Name="Home" Grid.Row="0" Grid.Column="2" Click="Home_Click">
                <Image HorizontalAlignment="Left" Margin="5px,0,5px,0" VerticalAlignment="Center" Width="31" Height="28" Source="/assets/home.png"/>
            </Button>

            <TextBox Grid.Row="0" Grid.Column="3" KeyDown="SearchBox_KeyDown" x:Name="SearchBox" Foreground="Black" FontSize="20" FontWeight="SemiBold" Margin="14 0 14 0"></TextBox>

            <Button x:Name="Lock" Grid.Row="0" Grid.Column="4" Click="Lock_Click">
                <Image HorizontalAlignment="Left" Height="25" Margin="5px,0,5px,0" VerticalAlignment="Center" Width="35" Source="/assets/lock.png"/>
            </Button>

            <Button x:Name="Settings" Grid.Row="0" Grid.Column="5" Click="Settings_Click">
                <Image HorizontalAlignment="Left" Height="25" Margin="5px,0,5px,0" VerticalAlignment="Center" Width="35" Source="/assets/settings.png"/>
            </Button>

        </Grid>

        <Border BorderThickness="1" BorderBrush="Black"></Border>
        <Grid Grid.Row="1">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180"></ColumnDefinition>
                <ColumnDefinition Width="12*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Grid.Column="0" Grid.Row="0" VerticalAlignment="Center">
                <TextBlock TextWrapping="Wrap" Text="Back" TextDecorations="Underline"/>
            </Label>

        </Grid>
        <Border BorderBrush="Black" BorderThickness="1"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>

                <ColumnDefinition Width="80"></ColumnDefinition>
                <ColumnDefinition Width="200"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0" Height="70" Width="70" Source="/assets/User.png"/>
            <Label Grid.Column="1" Content="USER SETTING" VerticalAlignment="Center" Margin="10px, 0, 0px, 0" FontWeight="Bold"></Label>
            <Border BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="3"/>
        </Grid>


        <Grid Grid.Row="3">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="120"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="Notifications" Grid.Row="0" FontWeight="Bold"/>

                <Grid Grid.Column="1"  Margin="5px">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <TextBlock Text="Notify me when" Grid.Column="1"></TextBlock>
                    <CheckBox Content="Blocked site accessed" Grid.Row="1"/>
                    <CheckBox Content="Time limit reached" Grid.Row="2"/>
                    <CheckBox Content="Window locked" Grid.Row="3"/>

                </Grid>
                <Label Content="Time Restrictions" Grid.Row="1" FontWeight="Bold"/>
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="Daily Limit" Grid.Row="0" Grid.Column="0"></Label>
                        <Grid Grid.Column="1" Margin="0 10 0 0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="45"></ColumnDefinition>
                            <ColumnDefinition Width="50"></ColumnDefinition>
                            <ColumnDefinition Width="55"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                            <TextBox Width="45" Height="25" HorizontalAlignment="Right"></TextBox>
                            <Label Grid.Column="1" Content="Hour :" Margin="0 7 0 0" HorizontalAlignment="Left"></Label>
                            <TextBox Width="45" Height="25" HorizontalAlignment="Left" Grid.Column="2"></TextBox>
                        <Label Grid.Column="3" Content="Minutes" Margin="0 7 0 0" HorizontalAlignment="Left"></Label>
                    </Grid>
                    <Label Content="Access Time" Grid.Row="1" Grid.Column="0"></Label>

                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"></ColumnDefinition>
                            <ColumnDefinition Width="90"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition Width="30"></ColumnDefinition>
                            <ColumnDefinition Width="90"></ColumnDefinition>
                            <ColumnDefinition Width="80"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label Content="From:" VerticalAlignment="Center"></Label>
                        <Label Content="To:" Grid.Column="3" VerticalAlignment="Center"></Label>

                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Width="40" Height="25" Grid.Column="0"></TextBox>
                            <TextBox Width="40" Height="25" Grid.Column="1"></TextBox>
                        </Grid>
                        
                        <ComboBox Grid.Column="2" Margin="10" Height="25" >
                            <ComboBoxItem Content="AM"></ComboBoxItem>
                            <ComboBoxItem Content="PM"></ComboBoxItem>
                        </ComboBox>

                        <Grid Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBox Width="40" Height="25" Grid.Column="0"></TextBox>
                            <TextBox Width="40" Height="25" Grid.Column="1"></TextBox>
                        </Grid>

                        <ComboBox Grid.Column="5" Margin="10" Height="25" >
                            <ComboBoxItem Content="AM"></ComboBoxItem>
                            <ComboBoxItem Content="PM"></ComboBoxItem>
                        </ComboBox>

                    </Grid>
                </Grid>
                
                
                <Label Content="Blocked Sites" Grid.Row="2" FontWeight="Bold"/>
                <Grid Grid.Column="1" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition Height="25"></RowDefinition>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"></ColumnDefinition>
                        <ColumnDefinition Width="10*"></ColumnDefinition>
                        <ColumnDefinition Width="8*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    
                    <CheckBox Content="Nudity" Grid.Row="1" VerticalAlignment="Center"/>
                    <CheckBox Content="Violence" Grid.Row="2" VerticalAlignment="Center"/>
                    <CheckBox Content="Gore" Grid.Row="3" VerticalAlignment="Center"/>

                    <Label Grid.Row="1" Grid.Column="1" Content="Add URL" VerticalAlignment="Center"/>
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBox Margin="5 0 0 2" HorizontalAlignment="Left" Text="URL here" Width="190" Grid.Column="0"/>
                        <Button Margin="5 0 10 2" Content="BLOCK" Grid.Column="1"></Button>
                    </Grid>

                    <TextBlock Margin="5 5 5 5" Grid.Column="2" Grid.Row="1" Text="https://www.youtube.com/" Grid.RowSpan="4">
                    </TextBlock>
                    <Border BorderBrush="Black" BorderThickness="1" Grid.Column="2" Grid.Row="1" Grid.RowSpan="4">
                        <ScrollViewer/>
                    </Border>
                </Grid>


            </Grid>
        </Grid>
    </Grid>

</UserControl>
